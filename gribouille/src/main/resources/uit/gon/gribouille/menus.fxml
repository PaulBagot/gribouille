<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>

<MenuBar prefHeight="25.0" prefWidth="484.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uit.gon.gribouille.controleurs.MenusControleur">
	<menus>
		<Menu mnemonicParsing="false" text="Dessin">
			<items>
				<MenuItem mnemonicParsing="false" text="Charger" />
				<MenuItem mnemonicParsing="false" text="Sauvegarder" />
				<MenuItem mnemonicParsing="false" text="Exporter" />
				<SeparatorMenuItem mnemonicParsing="false" />
				<MenuItem mnemonicParsing="false" onAction="#onQuitte" text="Quitter" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="Outils">
			<items>
				<Menu mnemonicParsing="false" text="Epaisseur">
					<items>
						<RadioMenuItem mnemonicParsing="false" text="1">
							<toggleGroup>
								<ToggleGroup fx:id="epaisseurGroupe" />
							</toggleGroup>
						</RadioMenuItem>
						<RadioMenuItem mnemonicParsing="false" text="2" toggleGroup="$epaisseurGroupe" />
						<RadioMenuItem mnemonicParsing="false" text="3" toggleGroup="$epaisseurGroupe" />
						<RadioMenuItem mnemonicParsing="false" text="4" toggleGroup="$epaisseurGroupe" />
						<RadioMenuItem mnemonicParsing="false" text="5" toggleGroup="$epaisseurGroupe" />
						<RadioMenuItem mnemonicParsing="false" text="6" toggleGroup="$epaisseurGroupe" />
						<RadioMenuItem mnemonicParsing="false" text="7" toggleGroup="$epaisseurGroupe" />
						<RadioMenuItem mnemonicParsing="false" text="8" toggleGroup="$epaisseurGroupe" />
						<RadioMenuItem mnemonicParsing="false" text="9" toggleGroup="$epaisseurGroupe" />
					</items>
				</Menu>
				<RadioMenuItem fx:id="crayon" mnemonicParsing="false" selected="true" text="Crayon">
					<toggleGroup>
						<ToggleGroup fx:id="formeGroupe" />
					</toggleGroup>
				</RadioMenuItem>
				<RadioMenuItem fx:id="etoile" mnemonicParsing="false" text="Etoile" toggleGroup="$formeGroupe" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="Aide">
			<items>
				<MenuItem mnemonicParsing="false" text="A propos" />
			</items>
		</Menu>
	</menus>
</MenuBar>
